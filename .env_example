# ==========================================================
#  Message_AutoSend — пример конфигурационного файла .env
#  Используется python-dotenv (читается из config/settings.py)
# ==========================================================

# === SECURITY ===
# Уникальный ключ Django. Сгенерируйте с помощью:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Режим работы проекта: True (dev) / False (prod)
DEBUG=False

# Список разрешённых хостов через запятую
# (пример: localhost,127.0.0.1,example.com)
ALLOWED_HOSTS=example.com

# === I18N ===
# Код языка интерфейса Django
LANGUAGE_CODE=en-us
# Часовой пояс (пример: Europe/Moscow)
TIME_ZONE=UTC

# === DATABASE (PostgreSQL) ===
# Основные параметры подключения к базе данных
DB_NAME=message_autosend
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# === EMAIL (SMTP) ===
# Настройки отправки почты
# Используйте реальные данные своего SMTP-сервера
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP сервер (пример: smtp.gmail.com)
EMAIL_HOST=smtp.example.com
# Порт: 587 (TLS) или 465 (SSL)
EMAIL_PORT=587

# Учетные данные почтового ящика
EMAIL_HOST_USER=your_account@example.com
EMAIL_HOST_PASSWORD=your_app_password

# Варианты шифрования
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# От кого будут отправляться письма по умолчанию
DEFAULT_FROM_EMAIL=robot@example.com
# Адрес для получения системных уведомлений (ошибки, алерты)
SERVER_EMAIL=errors@example.com